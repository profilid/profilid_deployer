{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "authKeys",
      "host": {
        "sourcePath": "/var/app/auth_keys"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "usersDb",
      "image": "profilid/profilid_users_db",
      "hostname": "usersDb",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ]
    },

    {
      "name": "profilesDb",
      "image": "profilid/profilid_profiles_db",
      "hostname": "profilesDb",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 6000,
          "containerPort": 6000
        }
      ]
    },

    {
      "name": "client",
      "image": "profilid/profilid_client",
      "hostname": "client",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },

    {
      "name": "auth",
      "image": "profilid/profilid_auth",
      "hostname": "auth",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 4000,
          "containerPort": 4000
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "authKeys",
          "containerPath": "/var/app/authKeys",
          "readOnly": true
        }
      ],
      "links": ["usersDb", "profilesDb"]
    },

    {
      "name": "users",
      "image": "profilid/profilid_users",
      "hostname": "users",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 5001,
          "containerPort": 5001
        }
      ],
      "links": ["usersDb", "auth"]
    },

    {
      "name": "profiles",
      "image": "profilid/profilid_profiles",
      "hostname": "profiles",
      "essential": false,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 6001,
          "containerPort": 6001
        }
      ],
      "links": ["profilesDb", "auth"]
    },

    {
      "name": "proxyServer",
      "image": "profilid/profilid_proxy_server",
      "hostname": "proxyServer",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "users", "profiles", "auth", "usersDb", "profilesDb"]
    }
  ]
}
